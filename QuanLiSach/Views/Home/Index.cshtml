@model List<Book>
<div class="row pt-4">
    <div class="col-6">
        <h1 class="text-primary">Book List</h1>
    </div>

    <div class="col-6" style="text-align:right">
        <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
            Create New Book
        </a>

    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th style="color:red">
                Id
            </th>
            <th style="color:red">
                Tên Sách
            </th>
            <th style="color:red">
                Tác Giả
            </th>
            <th style="color:red">
                Năm Xuất Bản
            </th>
            <th style="color:red">
                Số Lượng
            </th>
            <th style="color:red">
                Thể loại
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td width="5%">
                    @book.Id
                </td>
                <td width="20%">
                    @book.Namebook
                </td>
                <td width="20%">
                    @book.Author
                </td>
                <td width="20%">
                    @book.Publishingyear
                </td>
                <td width="15%">
                    @book.Count
                </td>
                <td width="15%">
                    @book.categoryBook.Category
                </td>
                <td width="60%" align="center">
                    <a asp-controller="Home" asp-action="Delete" asp-route-Id="@book.Id" class="btn btn-primary">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    <a asp-controller="Home" asp-action="Edit" asp-route-Id="@book.Id" class="btn btn-success">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>

        }

    </tbody>
</table>

